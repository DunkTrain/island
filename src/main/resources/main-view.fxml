<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.cooper.island.ui.MainController">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <Label styleClass="title-label" text="Island Simulation" />
            <Label fx:id="statusLabel" text="Simulation not started" />
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <GridPane fx:id="islandGridPane" alignment="CENTER" hgap="1" vgap="1" />
        </ScrollPane>
    </center>
    <bottom>
        <VBox spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="startButton" onAction="#handleStartSimulation" text="Start" />
                <Button fx:id="stopButton" disable="true" onAction="#handleStopSimulation" text="Stop" />
                <Button fx:id="resetButton" onAction="#handleResetSimulation" text="Reset" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label text="Simulation Speed:" />
                <Slider fx:id="speedSlider" blockIncrement="100" majorTickUnit="200" max="1000" min="100" showTickLabels="true" showTickMarks="true" value="500" />
            </HBox>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>